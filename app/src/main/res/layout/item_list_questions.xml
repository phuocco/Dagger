<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginBottom="1dp"
    android:weightSum="6"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/itemQuestions_llLeft"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:background="@color/item_background"
        android:layout_weight="1">
        <TextView
            android:id="@+id/itemQuestions_tvVotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/votes"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <TextView
            android:id="@+id/itemQuestions_tvAnswers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2"
            android:drawablePadding="5dp"
            android:textColor="@color/answer_color"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/answers_non_zero"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:background="@android:color/white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/itemQuestions_tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="20dp"
            android:lineSpacingExtra="3dp"
            android:paddingBottom="5dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/blue"
            android:text="Flutter: how to import Flutter project"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:paddingBottom="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/itemQuestions_tvTags"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:textSize="12sp"
                android:textColor="@color/tag_color"
                android:paddingStart="12dp"
                android:paddingEnd="20dp"
                android:text="flutter, android, gradle"/>

<!--            <com.google.android.flexbox.FlexboxLayout-->
<!--                android:id="@+id/itemQuestions_flexTags"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight="3"-->
<!--                app:flexWrap="wrap"-->
<!--                app:alignContent="center"-->
<!--                app:flexDirection="row"-->
<!--                />-->

            <TextView
                android:id="@+id/itemQuestions_tvTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/time_color"
                android:layout_weight="4"
                android:layout_marginEnd="10dp"
                android:textAlignment="textEnd"
                android:text="3 sec. ago"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>